@{
    Layout = "~/Views/Shared/_Layout_Externo.cshtml";
    ViewData["Title"] = "Restablecer Contraseña - Sistema Administrativo";
}

<div class="container" style="display:flex; justify-content:center; align-items:center">
    <div class="row justify-content-center" style="width: 80%;">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-2">Olvidaste tu contraseña?</h1>
                                    <p class="mb-4">
                                        Lo entendemos, a veces pasa. Simplemente ingrese su dirección de correo electrónico a continuación
                                        ¡Y te enviaremos un enlace para restablecer tu contraseña!
                                    </p>
                                </div>
                                <form asp-action="ForgotPassword" method="post">
                                    <div class="form-group mb-3">
                                        <label for="email" class="form-label">Correo Electrónico</label>
                                        <input type="email" id="email" name="email" class="form-control" required />
                                    </div>

                                    <div class="form-group d-grid text-center">
                                        <button type="submit" class="btn btn-primary">Enviar Instrucciones</button>
                                    </div>
                                </form>
                                <div class="text-center">
                                    <a asp-action="Index" class="small">Volver al inicio de sesión</a>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>
@section Scripts {

}

